# Vite Environment Configuration for FarmSense React Frontend

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# Application Environment
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi,mr,gu,bn,ta,te,kn

# Authentication & Security
VITE_JWT_SECRET=your-jwt-secret-key
VITE_TOKEN_EXPIRY=3600
VITE_REFRESH_TOKEN_EXPIRY=604800

# Third-party Services
VITE_AI_SERVICE_URL=https://api.gemini.ai
VITE_AI_API_KEY=your-gemini-api-key

# Analytics & Monitoring (Optional)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# PWA Configuration
VITE_PWA_NAME=FarmSense
VITE_PWA_SHORT_NAME=FarmSense
VITE_PWA_THEME_COLOR=#4CAF50
VITE_PWA_BACKGROUND_COLOR=#ffffff

# Mobile App Configuration (Capacitor)
VITE_CAPACITOR_APP_ID=com.farmsense.app
VITE_CAPACITOR_APP_NAME=FarmSense

# Development Tools
VITE_ENABLE_DEBUG=true
VITE_LOG_LEVEL=debug

# Production Override Example:
# For production deployment, copy this to .env.production and update values:
# VITE_API_BASE_URL=https://api.farmsense.in
# VITE_ENVIRONMENT=production
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_PWA=true
# VITE_ENABLE_SERVICE_WORKER=true
# VITE_ENABLE_DEBUG=false
# VITE_LOG_LEVEL=error

# Staging Environment Example:
# For staging deployment, copy this to .env.staging and update values:
# VITE_API_BASE_URL=https://staging-api.farmsense.in
# VITE_ENVIRONMENT=staging
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_PWA=true
# VITE_ENABLE_DEBUG=true
# VITE_LOG_LEVEL=info